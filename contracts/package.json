{
  "name": "cerebrum",
  "version": "1.0.0",
  "description": "Democratized and Incentizied Machine Learning on Blockchain using Substrate.",
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:local": "npx hardhat run scripts/deploy.js --network hardhat",
    "deploy:substrate": "npx hardhat run scripts/deploy.js --network substrate",
    "test": "npx hardhat test",
    "flatten": "npx hardhat flatten ./contracts/cerebrum.sol > flat.sol",
    "check": "npm run test && npm run deploy:local",
    "explorer": "ethernal listen"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anudit/cerebrum.git"
  },
  "author": "Anudit Nagar",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/anudit/cerebrum/issues"
  },
  "homepage": "https://github.com/anudit/cerebrum#readme",
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.1.0",
    "chai": "^4.2.0",
    "dotenv": "^9.0.2",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.0.31",
    "hardhat": "^2.0.11",
    "hardhat-abi-exporter": "^2.0.8",
    "hardhat-contract-sizer": "^2.0.2",
    "hardhat-ethernal": "^0.2.3",
    "hardhat-gas-reporter": "^1.0.4"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.10"
  }
}
